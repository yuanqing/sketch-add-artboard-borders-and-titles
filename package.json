{
  "private": true,
  "version": "0.5.0",
  "devDependencies": {
    "sketch-plugin-helper": "*"
  },
  "scripts": {
    "build": "sph build",
    "fix": "sph lint --fix",
    "lint": "sph lint",
    "symlink": "sph symlink",
    "unlink": "sph symlink --delete",
    "version": "sph version",
    "watch": "sph build --watch"
  },
  "sketch-plugin-helper": {
    "pluginName": "Add Artboard Borders and Titles",
    "pluginDescription": "A Sketch plugin to automatically add borders and titles to artboards",
    "authorName": "Lim Yuan Qing",
    "githubUserName": "yuanqing",
    "githubRepositoryName": "sketch-add-artboard-borders-and-titles",
    "menu": [
      {
        "handler": "add-artboard-borders/add-artboard-borders",
        "label": "Add Artboard Borders",
        "shortcut": "ctrl option cmd b"
      },
      {
        "handler": "add-artboard-borders/settings",
        "label": "Settings"
      },
      "-",
      {
        "handler": "add-artboard-titles/add-artboard-titles",
        "label": "Add Artboard Titles",
        "shortcut": "ctrl option cmd t"
      },
      {
        "handler": "add-artboard-titles/settings",
        "label": "Settings"
      }
    ],
    "defaults": {
      "addArtboardBorders.borderColor": "#000000",
      "addArtboardBorders.borderWidth": "2",
      "addArtboardTitles.font": "Helvetica",
      "addArtboardTitles.fontSize": "24",
      "addArtboardTitles.lineHeight": "32",
      "addArtboardTitles.verticalOffset": "16"
    }
  }
}
